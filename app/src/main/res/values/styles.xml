<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorSecondary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="btn_simple" parent="Widget.AppCompat.Button.Colored">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:paddingRight">35dip</item>
        <item name="android:paddingLeft">35dip</item>
        <item name="android:paddingTop">15dip</item>
        <item name="android:paddingBottom">15dip</item>
    </style>

    <style name="InputEditTextTheme" parent="Widget.AppCompat.EditText">
        <item name="colorControlActivated">#FFFFFF</item>
        <item name="colorControlNormal">#FFFFFFFF</item>
    </style>

    <style name="AlertDialogTheme" parent="@style/Theme.AppCompat.Light.Dialog">
        <item name="android:textSize">14sp</item>
    </style>

</resources>